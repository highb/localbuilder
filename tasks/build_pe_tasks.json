{
  "description": "Build a custom pe-tasks package for use with PE",
  "files": ["ruby_task_helper/files/task_helper.rb",
      "localbuilder/files/build_vanagon_package_helpers.rb",
      "localbuilder/files/pe_version_helpers.rb"],
  "input_method": "stdin",
  "parameters": {
    "platforms": {
      "description": "List of platforms for which to build the package",
      "type": "Array[String]"
    },
    "version": {
      "description": "Codename PE version string",
      "type": "String[1]"
    },
    "facter_task": {
      "description": "Path to local facter_task repo",
      "type": "Optional[String[1]]"
    },
    "facter_task_pr": {
      "description": "facter_task PR number",
      "type": "Optional[String[1]]"
    },
    "package": {
      "description": "Path to local puppetlabs-package repo",
      "type": "Optional[String[1]]"
    },
    "package_pr": {
      "description": "puppetlabs-package PR number",
      "type": "Optional[String[1]]"
    },
    "puppet_conf": {
      "description": "Path to local puppetlabs-puppet_conf repo",
      "type": "Optional[String[1]]"
    },
    "puppet_conf_pr": {
      "description": "puppetlabs-puppet_conf PR number",
      "type": "Optional[String[1]]"
    },
    "pe_installer_cd4pe": {
      "description": "Path to local puppetlabs-pe_installer_cd4pe repo",
      "type": "Optional[String[1]]"
    },
    "pe_installer_cd4pe_pr": {
      "description": "puppetlabs-pe_installer_cd4pe PR number",
      "type": "Optional[String[1]]"
    },
    "service": {
      "description": "Path to local puppetlabs-service repo",
      "type": "Optional[String[1]]"
    },
    "service_pr": {
      "description": "puppetlabs-service PR number",
      "type": "Optional[String[1]]"
    }
  }
}
